<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.SubscriberDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#4CAF50"
        app:title="Details"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                app:cardBackgroundColor="#F6F5F5"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:fontFamily="@font/cabin_bold"
                            android:text="Subscriber Details"
                            android:textColor="#111"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:animateLayoutChanges="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/fristitem"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:fontFamily="@font/cabin_bold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="Subscriber Name"
                                    android:textColor="#717070"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/tvSubscriberName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/fristitem"
                                    android:fontFamily="@font/cabin_semibold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="#111111"
                                    android:textSize="15sp"
                                    tools:text="a b c d e f fg h h h hh h " />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_below="@id/tvSubscriberName"
                                    android:src="@drawable/textitem" />

                            </RelativeLayout>

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/seconditem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cabin_bold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="Subscriber Address"
                                    android:textColor="#717070"
                                    android:textSize="13sp" />


                                <TextView
                                    android:id="@+id/tvSubscriberAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/seconditem"
                                    android:fontFamily="@font/cabin_semibold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="#111111"
                                    android:textSize="15sp"
                                    tools:text="Rajkot" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_below="@id/tvSubscriberAddress"
                                    android:src="@drawable/textitem" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/thirditem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cabin_bold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="Subscriber Mobile No"
                                    android:textColor="#717070"
                                    android:textSize="13sp" />


                                <TextView
                                    android:id="@+id/tvSubscriberMobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/thirditem"
                                    android:fontFamily="@font/cabin_semibold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="#111111"
                                    android:textSize="15sp"
                                    tools:text="98998989898" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_below="@id/tvSubscriberMobile"
                                    android:src="@drawable/textitem" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/fiveitem"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cabin_bold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="SetTop Box No"
                                    android:textColor="#717070"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/tvSetupBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/fiveitem"
                                    android:fontFamily="@font/cabin_semibold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="#111111"
                                    android:textSize="15sp"
                                    tools:text="12345678" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_below="@id/tvSetupBox"
                                    android:src="@drawable/textitem" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/sixitem"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cabin_bold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="Area"
                                    android:textColor="#717070"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/tvAreaName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/sixitem"
                                    android:fontFamily="@font/cabin_semibold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="#111111"
                                    android:textSize="15sp"
                                    tools:text="12345678" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_below="@id/tvSetupBox"
                                    android:src="@drawable/textitem" />
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                app:cardBackgroundColor="#F6F5F5"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:fontFamily="@font/cabin_bold"
                            android:text="Paid Details"
                            android:textColor="#111"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:animateLayoutChanges="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/sevenitem"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:fontFamily="@font/cabin_bold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="Amount Paid"
                                    android:textColor="#717070"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/tvamountpaid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/sevenitem"
                                    android:fontFamily="@font/cabin_semibold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="#111111"
                                    android:textSize="15sp"
                                    tools:text="1234" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@id/tvamountpaid"
                                    android:background="@drawable/textitem" />

                            </RelativeLayout>

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/eightitem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cabin_bold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="Date"
                                    android:textColor="#717070"
                                    android:textSize="13sp" />


                                <TextView
                                    android:id="@+id/tvdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/eightitem"
                                    android:fontFamily="@font/cabin_semibold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="#111111"
                                    android:textSize="15sp"
                                    tools:text="12/2/2020" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_below="@id/tvdate"
                                    android:src="@drawable/textitem" />

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                app:cardBackgroundColor="#F6F5F5"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:fontFamily="@font/cabin_bold"
                            android:text="Package Details"
                            android:textColor="#111"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:animateLayoutChanges="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/nineitem"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:fontFamily="@font/cabin_bold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="Package Name"
                                    android:textColor="#717070"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/pkgName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/nineitem"
                                    android:fontFamily="@font/cabin_semibold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="#111111"
                                    android:textSize="15sp"
                                    tools:text="sony,star,tv " />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_below="@id/pkgName"
                                    android:src="@drawable/textitem" />

                            </RelativeLayout>

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/tenitem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cabin_bold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="Package Price"
                                    android:textColor="#717070"
                                    android:textSize="13sp" />


                                <TextView
                                    android:id="@+id/pkgPrice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tenitem"
                                    android:fontFamily="@font/cabin_semibold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="#111111"
                                    android:textSize="15sp"
                                    tools:text="channel" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_below="@id/pkgPrice"
                                    android:src="@drawable/textitem" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/elevenitem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/cabin_bold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:text="Package Description"
                                    android:textColor="#717070"
                                    android:textSize="13sp" />


                                <TextView
                                    android:id="@+id/pkgDescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/elevenitem"
                                    android:fontFamily="@font/cabin_semibold"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="#111111"
                                    android:textSize="15sp"
                                    tools:text="9999" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_below="@id/pkgDescription"
                                    android:src="@drawable/textitem" />
                            </RelativeLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>